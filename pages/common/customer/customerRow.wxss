.customer-row {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: .9em;
  line-height: 1.8em;
  box-shadow: 2px 2px 2px 1px #ddd;
}
.divLine{
 background: #E0E3DA;
 width: 100%;
 height: 4rpx;
}
.row-cell {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
  color: #496069;
  border-bottom: 0.5px solid #ddd;
  background-color: #fff;
  box-sizing: border-box;
}
.row-cell .row-left,
.row-cell .row-right {
  display: flex;
  flex-direction: row;
  align-items: center;
}
